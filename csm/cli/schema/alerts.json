{
  "name": "alerts",
  "description": "Alerts",
  "sub_commands": [
    {
      "name": "show",
      "description": "Displays Alerts On the cli",
      "need_confirmation": false,
      "permissions_tag": "list",
      "args": [
        {
          "flag": "-d",
          "dest": "duration",
          "nargs": "?",
          "type": "str",
          "help": "Time period, for which we request alerts. Format: <x>s <y>m <z>h <q>d. Where x, y, z, q is amounts of seconds, minutes, hours, days respectively",
          "default": "60s",
          "params": true
        },
        {
          "flag": "-c",
          "dest": "limit",
          "nargs": "?",
          "type": "int",
          "help": "No. of Alerts",
          "default": "1000",
          "params": true
        },
        {
          "flag": "-s",
          "dest": "show_all",
          "action": "store_const",
          "help": "Display All Alerts",
          "default": "false",
          "const": "true",
          "params": true
        },
        {
          "flag": "-a",
          "dest": "show_active",
          "action": "store_const",
          "help": "Display Active Alerts",
          "default": "false",
          "const": "true",
          "params": true
        },
        {
          "flag": "args",
          "default": [],
          "nargs": "?",
          "help": "Additional arguments that can be send to csm agent"
        },
        {
          "flag": "-f",
          "dest": "format",
          "help": "Format of Output",
          "default": "table",
          "type": "str",
          "choices": [
            "table",
            "xml",
            "json"
          ],
          "nargs": "?"
        }
      ],
      "comm": {
        "type": "rest",
        "method": "get",
        "target": "/{version}/alerts",
        "version": "v1"
      },
      "output": {
        "table": {
          "headers": {
            "alert_uuid": "Alert Id",
            "health": "Health",
            "description": "Description",
            "severity": "Severity",
            "state": "State",
            "acknowledged": "Acknowledged",
            "resolved": "Resolved"
          },
          "filters": "alerts"
        }
      }
    },
    {
      "name": "history",
      "description": "Displays alerts history on cli",
      "need_confirmation": false,
      "permissions_tag": "list",
      "args": [
        {
          "flag": "-d",
          "dest": "duration",
          "nargs": "?",
          "type": "str",
          "help": "Time period, for which we request alerts. Format: <x>s <y>m <z>h <q>d. Where x, y, z, q is amounts of seconds, minutes, hours, days respectively",
          "default": "60s",
          "params": true
        },
        {
          "flag": "-c",
          "dest": "limit",
          "nargs": "?",
          "type": "int",
          "help": "No. of Alerts",
          "default": "1000",
          "params": true
        },
        {
          "flag": "-s",
          "dest": "start_date",
          "nargs": "?",
          "type": "str",
          "help": "Start date for fetching alerts.",
          "default": "",
          "params": true
        },
        {
          "flag": "-e",
          "dest": "end_date",
          "nargs": "?",
          "type": "str",
          "help": "End date for fetching alerts.",
          "default": "",
          "params": true
        },
        {
          "flag": "-i",
          "dest": "sensor_info",
          "nargs": "?",
          "type": "str",
          "help": "Sensor info of the resource.",
          "default": "",
          "params": true
        },
        {
          "flag": "args",
          "default": [],
          "nargs": "?",
          "help": "Additional arguments that can be send to csm agent"
        },
        {
          "flag": "-f",
          "dest": "format",
          "help": "Format of Output",
          "default": "table",
          "type": "str",
          "choices": [
            "table",
            "xml",
            "json"
          ],
          "nargs": "?"
        }
      ],
      "comm": {
        "type": "rest",
        "method": "get",
        "target": "/{version}/alerts_history",
        "version": "v1"
      },
      "output": {
        "table": {
          "headers": {
            "alert_uuid": "Alert Id",
            "health": "Health",
            "description": "Description",
            "severity": "Severity",
            "state": "State",
            "acknowledged": "Acknowledged",
            "resolved": "Resolved",
            "sensor_info": "Sensor Info"
          },
          "filters": "alerts"
        }
      }
    },
    {
      "name": "acknowledge",
      "description": "Acknowledged all the Alerts",
      "need_confirmation": true,
      "permissions_tag": "update",
      "args": [
        {
          "flag": "alerts_id",
          "type": "str",
          "help": "Alert Id"
        },
        {
          "flag": "-ack",
          "dest": "acknowledged",
          "action": "store_const",
          "help": "Marks Alert as Acknowledge, Un-acknowledge when missing.",
          "default": false,
          "const": true,
          "json": true
        },
        {
          "flag": "args",
          "default": [],
          "nargs": "?",
          "help": "Additional arguments that can be send to csm agent"
        }
      ],
      "comm": {
        "type": "rest",
        "method": "patch",
        "target": "/{version}/alerts/{alerts_id}",
        "version": "v1"
      },
      "output": {
        "success": "Alert Updated."
      }
    },
    {
      "name": "comment",
      "description": "Comment on a given alert id",
      "permissions_tag": "list",
      "sub_commands": [
        {
          "name": "show",
          "description": "Displays Comments of a particular Alert",
          "need_confirmation": false,
          "permissions_tag": "list",
          "args": [
            {
              "flag": "alert_uuid",
              "type": "str",
              "help": "Alert ID for which Comment need to added"
            },
            {
              "flag": "comment_text",
              "type": "str",
              "help": "Comment need to added.",
              "json": true
            },
            {
              "flag": "args",
              "default": [],
              "nargs": "?",
              "help": "Additional arguments that can be send to csm agent"
            },
            {
              "flag": "-f",
              "dest": "format",
              "help": "Format of Output",
              "default": "table",
              "type": "str",
              "choices": [
                "table",
                "xml",
                "json"
              ],
              "nargs": "?"
            }
          ],
          "comm": {
            "type": "rest",
            "method": "get",
            "target": "/{version}/alerts/{alert_uuid}/comments",
            "version": "v1"
          },
          "output": {
            "table": {
              "headers": {
                "comment_id": "Comment Id",
                "comment_text": "Comment",
                "created_by": "Created By",
                "created_time": "Created Time"
              },
              "filters": "comments"
            }
          }
        },
        {
          "name": "add",
          "description": "Add Comment to an existing Alert.",
          "need_confirmation": true,
          "permissions_tag": "update",
          "args": [
            {
              "flag": "alert_uuid",
              "type": "str",
              "help": "Alert ID for which Comment need to added"
            },
            {
              "flag": "args",
              "default": [],
              "nargs": "?",
              "help": "Additional arguments that can be send to csm agent"
            }
          ],
          "comm": {
            "type": "rest",
            "method": "post",
            "target": "/{version}/alerts/{alert_uuid}/comments",
            "version": "v1"
          },
          "output": {
            "success": "Alert Comment Added."
          }
        }
      ]
    }
  ]
}
