$PreserveFQDN on
$ModLoad imfile
$template FileNameAsTag, "<%PRI%>%TIMESTAMP:::date-rfc3339% %HOSTNAME% %syslogtag% %msg:::sp-if-no-1st-sp% %msg%"

# Moniter file
$InputFileMode inotify
$InputFileName FileLogName
$InputFileTag FILENAMETAG
$InputFileStateFile FLog
$InputFileSeverity info
$InputFileFacility local0
$InputFilePersistStateInterval 300
$InputRunFileMonitor

if $syslogtag == 'FILENAMETAG'
then @@cmu:cmu_port;FileNameAsTag

